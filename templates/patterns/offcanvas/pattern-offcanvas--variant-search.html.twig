{% extends 'pattern-offcanvas.html.twig' %}
{% block offcanvas %}
  {% include '@oe-bcl/offcanvas' with {
    'title': title,
    'title_attributes': create_attribute().addClass('mb-lg-4'),
    'placement': placement,
    'id': offcanvas_id,
    'body': body,
    'with_body_scroll': body_scroll,
    'with_backdrop': backdrop,
    'extra_classes_body': 'bcl-offcanvas p-lg-0 d-block',
    'extra_classes_close': "d-lg-none",
    'extra_classes_header': "p-lg-0 d-lg-block",
    'attributes': attributes.addClass('bcl-offcanvas'),
    'responsiveness': 'lg'
  } only %}
{% endblock %}
{% block toggle_button %}
  {{ parent() }}
{% endblock %}
